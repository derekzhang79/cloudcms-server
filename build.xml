<?xml version='1.0'?>
<project name="Cloud CMS Node JS" basedir="." default="full">

   <property name="cloudcms-net-server.path" value="../cloudcms-net-server"/>

   <target name="clean">
       <delete dir="server" failonerror="false" />
   </target>

    <target name="init">
        <mkdir dir="server"/>
    </target>

   <target name="full" depends="clean,init">
       <copy todir="server">
           <fileset dir="${cloudcms-net-server.path}">
               <exclude name="cloudcms-net-server.iml"/>
               <exclude name="cloudcms-net-server.ipr"/>
               <exclude name="cloudcms-net-server.iws"/>
               <exclude name="index.html"/>
               <exclude name="README.md"/>
               <exclude name=".gitignore"/>
               <exclude name=".git/"/>
               <exclude name=".elasticbeanstalk/"/>
           </fileset>
       </copy>
   </target>

</project>